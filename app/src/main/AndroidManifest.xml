<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.fastshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activity.MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <!-- 引导页面 -->
        <activity android:name=".view.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.LoginActivity" />
        <activity android:name=".view.activity.RegisteByPhoneActivity" />
        <activity android:name=".view.activity.BeginerGuideActivity" />
        <activity android:name=".view.activity.TobeAnnouncedActivity" />
        <activity android:name=".view.activity.SettingActivity" />
        <activity android:name=".view.activity.WinningRecordActivity" />
        <activity android:name=".view.activity.RechargeActivity" />
        <activity android:name=".view.activity.GoodsDetailsActivity"></activity>
    </application>

</manifest>